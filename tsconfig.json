{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
        "noImplicitThis": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@nger-cloud/webpack.basic": [
                "packages/webpack/lib/basic/src/index.ts"
            ],
            "@nger-cloud/webpack.api": [
                "packages/webpack/lib/api/src/index.ts"
            ],
            "@nger-cloud/webpack.domain": [
                "packages/webpack/lib/domain/src/index.ts"
            ],
            "@nger-cloud/webpack.core": [
                "packages/webpack/lib/core/src/index.ts"
            ],
            "@nger-cloud/webpack.bin": [
                "packages/webpack/lib/bin/src/index.ts"
            ],
            "@nger-cloud/utils": [
                "packages/utils/lib/index.ts"
            ]
        }
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules"
    ]
}